{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"build": "browserify docs/app.js -o docs/bundle.js<% if (esnext) { %> -t [babelify --presets [ es2015 ] ]<% } %>",
		"prestart": "npm run build",
		"start": "browser-sync start --server 'docs' --files 'docs' --port 4000",
		"test": "xo<% if (ava) { %>&& ava<% } %>",
		"watch": "node watcher"
	},
	"main": "lib/index.js",
	"files": [
		"lib"
	],
	"keywords": [
		"d3",
		"d3.js",
		"chart"
	],
	"dependencies": {
		"d3": "^4.3.0",
		"object-assign": "^4.1.0"
	},
	"devDependencies": {<% if (ava) { %>
		"ava": "^0.15.2",<% } %>
		"browser-sync": "^2.17.5",
		"browserify": "^13.1.1",<% if (esnext) { %>
		"babel-preset-es2015": "^6.18.0",
		"babelify": "^7.3.0",<% } %>
		"watchify": "^3.7.0",
		"xo": "^0.16.0"
	},
	"xo": {
		"ignores": ["docs/bundle.js"],
		"envs": ["browser"]
	}
}
